<Window x:Class="SwordGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordGame"
        mc:Ignorable="d"
        Title="Sword Damage" Height="175" Width="300">
    <Grid>
        <CheckBox x:Name="flaming" Content="Flaming" HorizontalAlignment="Left" Margin="41,28,0,0" VerticalAlignment="Top" Unchecked="Flaming_Unchecked" Checked="Flaming_Checked"/>
        <CheckBox x:Name="magic" Content="Magic" HorizontalAlignment="Left" Margin="207,25,0,0" VerticalAlignment="Top" Checked="Magic_Checked" Unchecked="Magic_Unchecked"/>
        <TextBlock x:Name="damage" HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" Text="damage" VerticalAlignment="Top"/>
        <Button Content="Roll for damage" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="218" Click="Button_Click"/>
    </Grid>
</Window>
